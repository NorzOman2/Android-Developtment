<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121216"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="175dp"
        android:layout_marginTop="75dp"
        android:layout_marginEnd="175dp"
        android:background="#24232b"
        android:paddingLeft="75dp"
        android:paddingTop="20dp"
        android:paddingRight="75dp"
        android:paddingBottom="20dp"
        android:text="PoV6#ip"
        android:textColor="#FFFFFF"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="290dp"
        android:layout_height="400dp"
        android:layout_marginStart="61dp"
        android:layout_marginTop="58dp"
        android:layout_marginEnd="61dp"
        android:background="#24232b"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/password">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:padding="20dp"
            android:text="Character length"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <SeekBar
            android:id="@+id/seekBar"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="0dp"
            android:max="25"
            android:padding="20dp" />

        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:padding="20dp"
            android:text="Include Uppercase"
            android:textColor="#FFFFFF" />

        <CheckBox
            android:id="@+id/checkBox2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:padding="20dp"
            android:text="Include Numbers"
            android:textColor="#FFFFFF" />

        <CheckBox
            android:id="@+id/checkBox3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:padding="20dp"
            android:text="Include Special Characters"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/generate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="#000000"
            android:onClick="generate_password"
            android:padding="5dp"
            android:text="Generate" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>